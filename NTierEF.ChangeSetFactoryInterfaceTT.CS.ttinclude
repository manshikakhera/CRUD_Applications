        if (!string.IsNullOrWhiteSpace(project))
        {
            base.Output.Project = project;
        }
        this.EdmUtility = edmUtility;
        this.Namespace = defaultNameSpace;
        this.ClientBaseNamespace = "NTier.Client.Domain";
        this.ModelNamespace = modelNamespace;
